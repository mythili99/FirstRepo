<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
        <Property name="LOG_FILE">${sys:user.dir}/logs/application.log</Property>
    </Properties>

    <Appenders>
        <!-- Console Appender -->
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <!-- File Appender -->
        <File name="FileAppender" fileName="${LOG_FILE}">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </File>

        <!-- Rolling File Appender for daily logs -->
        <RollingFile name="RollingFileAppender" 
                     fileName="${sys:user.dir}/logs/application.log"
                     filePattern="${sys:user.dir}/logs/application-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- Test Results File Appender -->
        <File name="TestResultsAppender" fileName="${sys:user.dir}/logs/test-results.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- Framework specific loggers -->
        <Logger name="com.automation" level="INFO" additivity="false">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>

        <!-- Selenium WebDriver logs -->
        <Logger name="org.openqa.selenium" level="WARN" additivity="false">
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>

        <!-- REST Assured logs -->
        <Logger name="io.restassured" level="WARN" additivity="false">
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>

        <!-- Apache HTTP Client logs -->
        <Logger name="org.apache.http" level="WARN" additivity="false">
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>

        <!-- Test results logger -->
        <Logger name="TestResults" level="INFO" additivity="false">
            <AppenderRef ref="TestResultsAppender"/>
        </Logger>

        <!-- Root logger -->
        <Root level="INFO">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="RollingFileAppender"/>
        </Root>
    </Loggers>
</Configuration>